@model IEnumerable<Post>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<div class="border backgroundWhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Blog Post List</h2>
        </div>
        <div class="col-6 text-right">
            <p>
                <a asp-action="Create" class="btn btn-primary"><i class="fa fa-plus"></i>&nbsp; Create New</a>
            </p>
        </div>
    </div>
    <br />
    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                <tr>
                    <th>@Html.DisplayNameFor(m => m.Title)</th>
                    <th>@Html.DisplayNameFor(m => m.Description)</th>
                    <th>Posted By</th>
                    <th>@Html.DisplayNameFor(m => m.DateCreated)</th>
                    <th></th>
                </tr>
                @foreach (var post in Model)
                {
            <tr>
                <td>
                    @Html.DisplayFor(m => post.Title)
                </td>
                <td>
                    @Html.DisplayFor(m => post.Description)
                </td>
                <td>
                    @Html.DisplayFor(m => post.PosterEmail)
                </td>
                <td>
                    @Html.DisplayFor(m => post.DateCreated)
                </td>
                <td>
                    <div class="btn-group" role="group">
                        <a class="btn btn-primary text-white" asp-action="Edit" asp-route-Id="@post.PostId">
                            <i class="fa fa-edit"></i>
                        </a>

                        <a class="btn btn-success text-white" asp-action="Detail" asp-route-Id="@post.PostId">
                            <i class="fa fa-list-alt"></i>
                        </a>

                        <a class="btn btn-danger text-white" asp-action="Delete" asp-route-Id="@post.PostId">
                            <i class="fa fa-trash"></i>
                        </a>
                    </div>
                </td>
            </tr>

                }
            </table>
        }
        else
        {
            <p>No Post Exist...</p>
        }
    </div>
</div>

