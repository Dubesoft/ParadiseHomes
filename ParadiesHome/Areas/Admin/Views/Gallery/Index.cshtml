@model IEnumerable<Gallery>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br /><br />
<div class="border backgroundWhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Gallery List</h2>
        </div>
        <div class="col-6 text-right">
            <p>
                <a asp-action="Create" class="btn btn-primary"><i class="fa fa-plus"></i>&nbsp; Create New</a>
            </p>
        </div>
    </div>
    <br />
    <div> 
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                <tr>
                    <th>@Html.DisplayNameFor(m => m.Name)</th>
                    <th>@Html.DisplayNameFor(m => m.Description)</th>
                    <th>@Html.DisplayNameFor(m => m.Picture)</th>
                    <th></th>
                </tr>
                @foreach(var item in Model)
                {
            <tr>
                <td>
                    @Html.DisplayFor(m => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Description)
                </td>
                <td>
                    @*@Html.DisplayFor(m => item.Picture)*@
                </td>
                <td>
                    <div class="btn-group" role="group">
                        <a class="btn btn-primary text-white" asp-action="Edit" asp-route-Id="@item.Id">
                            <i class="fa fa-edit"></i>
                        </a>

                        <a class="btn btn-success text-white" asp-action="Detail" asp-route-Id="@item.Id">
                            <i class="fa fa-list-alt"></i>
                        </a>

                        <a class="btn btn-danger text-white" asp-action="Delete" asp-route-Id="@item.Id">
                            <i class="fa fa-trash"></i>
                        </a>
                    </div>
                </td>
            </tr>

                }
            </table>
        }
        else 
        {
            <p>No Gallery Exist...</p>
        }
    </div>
</div>

