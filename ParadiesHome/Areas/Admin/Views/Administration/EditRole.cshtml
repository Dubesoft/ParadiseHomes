@model ParadiesHome.Models.ViewModels.EditRoleViewModel
@{
    ViewData["Title"] = "EditRole";
}

<br />
<h2 class="text-info">Edit Role</h2>
<br />
<form method="post" asp-action="EditRole">
    <input type="hidden" asp-for="Id" class="form-control" />
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Edit User Record</h3>
        </div><!-- /.box-header -->
        <div class="box-body">
            <div class="form-group">
                <label for="inputPassword3" class="col-sm-2 control-label">User Role</label>

                <div class="border backgroundWhite">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group row">
                        <div class="col-2">
                            <label asp-for="RoleName" class="col-form-label"></label>
                        </div>
                        <div class="col-5">
                            <input asp-for="RoleName" class="form-control" />
                        </div>
                        <span asp-validation-for="RoleName" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <div class="col-5 offset-2">
                            <div class="row">
                                <div class="col-6">
                                    <input type="submit" class="btn btn-info form-control" value="Edit" />
                                </div>
                                <div class="col-6">
                                    <a asp-action="RolesList" class="btn btn-success form-control">Back to List</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-sm-10">
                    @if (Model.Users.Any())
                    {
                        foreach (var user in Model.Users)
                        {
                            <p>@user</p>
                        }
                    }
                    else
                    {
                        <p>No role is assigned</p>
                    }
                </div>
            </div>

        </div>
        <div class="box-footer">
            <div class="form-group">
                <div class="col-sm-10">
                    <a asp-action="EditUsersInRole" class="btn btn-primary" asp-route-roleId="@Model.Id"><i class="fa fa-plus"></i>&nbsp; Add or Remove User</a>
                </div>
            </div>
        </div>
    </div>
</form>

