@using Microsoft.AspNetCore.Identity

@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "RolesList";
}

<br />
<br />

<div class="border backgroundWhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">List of Roles</h2>
        </div>
        <div class="col-6 text-right">
            <p>
                <a asp-action="CreateRole" class="btn btn-info"><i class="fas fa-plus"></i> &nbsp; Create New Role</a>
            </p>
        </div>
    </div>
    <br />
    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        Role Id
                    </th>
                    <th>
                        Role Name
                    </th>
                    <th></th>
                </tr>
                @foreach (var role in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => role.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(m => role.Name)
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a class="btn btn-primary text-white" asp-action="EditRole" asp-route-id="@role.Id">
                                    <i class="fa fa-edit"></i>
                                </a>

                                <a class="btn btn-success text-white" asp-action="RoleDetail" asp-route-id="@role.Id">
                                    <i class="fa fa-list-alt"></i>
                                </a>

                                <a class="btn btn-danger text-white" asp-action="DeleteRole" asp-route-id="@role.Id">
                                    <i class="fa fa-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </table>
        }
        else
        {
            <p>No Role exist...</p>
        }
    </div>
</div>

