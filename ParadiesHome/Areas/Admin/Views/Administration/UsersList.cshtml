@using Microsoft.AspNetCore.Identity


@model IEnumerable<IdentityUser>

@{
    ViewData["Title"] = "UsersList";
}

<br />
<br />

<div class="border backgroundWhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">List of Users</h2>
        </div>
        <div class="col-6 text-right">
            <p>
                <a asp-action="CreateUser" class="btn btn-info"><i class="fas fa-plus"></i> &nbsp; Create New User</a>
            </p>
        </div>
    </div>
    <br />
    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        Id
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Phone Number
                    </th>
                    <th></th>
                </tr>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => user.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(m => user.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(m => user.PhoneNumber)
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a class="btn btn-primary text-white" asp-action="EditUser" asp-route-id="@user.Id">
                                    <i class="fa fa-edit"></i>
                                </a>

                                <a class="btn btn-success text-white" asp-action="UserDetail" asp-route-id="@user.Id">
                                    <i class="fa fa-list-alt"></i>
                                </a>

                                <a class="btn btn-danger text-white" asp-action="DeleteUser" asp-route-id="@user.Id">
                                    <i class="fa fa-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </table>
        }
        else
        {
            <p>No Role exist...</p>
        }
    </div>
</div>

