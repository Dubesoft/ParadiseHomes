@model ParadiesHome.Models.ViewModels.EditRoleViewModel
@{
    ViewData["Title"] = "DeleteRole";
}

<br />
<h2 class="text-info">Delete Role</h2>
<br />

<form method="post" asp-action="DeleteRole">
    <input type="hidden" asp-for="Id" class="form-control" />
    <div class="border backgroundWhite">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="RoleName" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="RoleName" class="form-control" readonly />
            </div>
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
                <div class="row">
                    <div class="col-6">
                        <input type="submit" class="btn btn-info form-control" value="Delete" />
                    </div>
                    <div class="col-6">
                        <a asp-action="RolesList" class="btn btn-success form-control">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

